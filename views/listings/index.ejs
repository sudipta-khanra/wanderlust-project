<% layout("/layouts/boilerplate") %>

  <style>
   #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}
    .filter {
      text-align: center;
      margin-top: 2rem;
      margin-right: 2rem;
      opacity: 0.6;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
      text-decoration: underline;
    }

    .filter p {
      font-size: 0.8rem;
    }

    .underline-gap {
  position: relative;
  display: inline-block;
  font-weight: bold;
  text-decoration: none;
  color: black;
  cursor: pointer;
}

.underline-gap::after {
  content: "";
  position: absolute;
  left: 10%; /* Gap from left */
  bottom: -5px; /* Distance from text */
  width: 80%; /* Length of underline */
  height: 2px;
  background-color: lightgray;
  opacity: 0; /* Hidden by default */
  transition: opacity 0.3s ease-in-out;
}

/* Show underline on hover */
.underline-gap:hover::after {
  opacity: 1;
}

.tax-info {
  display: none;
}

.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.20rem;
  padding: 1rem;
  margin-left: 1.5rem;
  display: flex;
  align-items: center;
}
  </style>

<body>
  <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p class="underline-gap">Trending</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-house"></i> </div>
        <p class="underline-gap">Rooms</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-city"></i> </div>
        <p class="underline-gap">Iconic Cities</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-mountain"></i> </div>
        <p class="underline-gap">Mountain</p>
      </div>

      <div class="filter">
        <div> <i class="fa-brands fa-fort-awesome"></i> </div>
        <p class="underline-gap">Castles</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-person-swimming"></i> </div>
        <p class="underline-gap">Amazing Pool</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-campground"></i> </div>
        <p class="underline-gap">Camping</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-cow"></i> </div>
        <p class="underline-gap">Farms</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-snowflake"></i> </div>
        <p class="underline-gap">Arctic</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-igloo"></i> </div>
        <p class="underline-gap">Domes</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-ship"></i> </div>
        <p class="underline-gap">Boats</p>
      </div>

      <div class="filter">
        <div> <i class="fa-solid fa-tents"></i> </div>
        <p class="underline-gap">Tents</p>
      </div>

      
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
     
  </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings){%>   
          <a href="/listings/<%=listing._id%>" class="listing-link"> 
            <div class="card col listing-card">
                <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"> </div>
                <div class="card-body">
                  <p class="card-text">
                    <b> <%=listing.title%> </b><br/>
                    &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
                    <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                  </p>
                </div>
              </div>
            </a>
              <%  } %>
    </div>
  </body>

  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault") 
    // let taxSwitch = document.querySelector("#flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for( info of taxInfo ) { 
           if(info.style.display !="inline") {
            info.style.display ="inline";
           } else {
            info.style.display ="none";
           }
      }
    });

  </script>